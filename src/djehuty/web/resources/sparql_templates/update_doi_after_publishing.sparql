{% extends "prefixes.sparql" %}
{% block query %}
DELETE {
  GRAPH <{{state_graph}}> {
    ?dataset   djht:doi          ?doi .
  }
}
INSERT {
  GRAPH <{{state_graph}}> {
    ?dataset   djht:doi          {{doi | safe}} .
  }
}
WHERE {
  GRAPH <{{state_graph}}> {
    ?dataset   rdf:type/rdfs:subClassOf djht:Container .
    OPTIONAL { ?dataset djht:doi ?doi . }
  }
  FILTER (?dataset = <{{item_type}}:{{item_uuid}}>)
}
{% endblock %}
