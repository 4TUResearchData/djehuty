{% extends "prefixes.sparql" %}
{% block query %}
{self.default_prefixes}
DELETE {
  GRAPH <{{state_graph}}> {
    ?article  djht:is_embargoed       ?is_embargoed .
    ?article  djht:embargo_type       ?embargo_type .
    ?article  djht:embargo_title      ?embargo_title .
    ?article  djht:embargo_reason     ?embargo_reason .
    ?article  djht:embargo_until_date ?embargo_until_date .
  }
}
INSERT {
    ?article  djht:is_embargoed   "0"^^xsd:boolean .
}
WHERE {
  GRAPH <{{state_graph}}> {
    ?article  rdf:type               djht:Article ;
    ?article  djht:account_id         {{account_id}} .
    ?article  djht:is_embargoed       ?is_embargoed .

    OPTIONAL { ?article  djht:embargo_type       ?embargo_type . }
    OPTIONAL { ?article  djht:embargo_title      ?embargo_title . }
    OPTIONAL { ?article  djht:embargo_reason     ?embargo_reason . }
    OPTIONAL { ?article  djht:embargo_until_date ?embargo_until_date . }
  }
  FILTER (?article = <{{article_uri}}>)
}
{% endblock %}
