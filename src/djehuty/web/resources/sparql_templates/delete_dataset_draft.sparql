{% extends "prefixes.sparql" %}
{% block query %}
DELETE {
  GRAPH <{{state_graph}}> {
    ?article  ?predicate            ?object .
    ?list     djht:index             ?list_index .
    ?list     ?any                  ?list_item .
  }
}
WHERE {
  GRAPH <{{state_graph}}> {
    ?container rdf:type             djht:DatasetContainer ;
               djht:account_id       {{account_id}} ;
               djht:draft            ?article .

    ?article   ?predicate           ?object ;
               ?list_predicate      ?list .
    OPTIONAL {
      ?list      rdf:type             rdf:List ;
                 djht:index            ?list_index ;
                 rdf:rest*/rdf:first  ?list_item .
    }
  }

  FILTER (?container = <{{container_uri}}>)
}
{% endblock %}
