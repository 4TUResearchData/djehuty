{% extends "prefixes.sparql" %}
{% block query %}
SELECT (COUNT(DISTINCT ?author_id) AS ?authors)
WHERE {
  GRAPH <{{state_graph}}> {
    ?author         rdf:type            djht:Author .
    ?author         djht:id              ?author_id .
    ?author         djht:is_public       "true"^^xsd:boolean .
  }
{%- if filters is not none %}{{ filters | safe }}{% endif %}
}
{% endblock %}
