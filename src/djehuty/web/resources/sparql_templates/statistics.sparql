{% extends "prefixes.sparql" %}
{% block query %}
SELECT (COUNT(DISTINCT ?article_id) AS ?articles)
WHERE {
  GRAPH <{{state_graph}}> {
    ?article        rdf:type            sg:Article .
    ?article        col:article_id      ?article_id .
    ?article        col:is_public       "true"^^xsd:boolean .
  }
{%- if filters is not none %}{{ filters }}{% endif %}
}
{% endblock %}
